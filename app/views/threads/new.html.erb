<h2>Create New Thread</h2>

<%= form_for(@thread, url: threads_path) do |f| %>
    <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
    </div>

    <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area(:description, title: "Thread description", size: "24x6") %>
    </div>

    <div class="action">
    <%= f.submit "Create Thread"%>
    </div>
<% end %>
<p><%= link_to 'Go back to Thread List', threads_path %></p>
